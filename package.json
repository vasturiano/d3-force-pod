{
  "name": "d3-force-pod",
  "version": "1.1.0",
  "description": "Component to automatically draw nodes/links in a D3 force simulation according to a set of forces",
  "type": "module",
  "unpkg": "dist/d3-force-pod.min.js",
  "main": "dist/d3-force-pod.mjs",
  "module": "dist/d3-force-pod.mjs",
  "exports": {
    "umd": "./dist/d3-force-pod.min.js",
    "default": "./dist/d3-force-pod.mjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/d3-force-pod.git"
  },
  "keywords": [
    "d3",
    "d3-module",
    "force",
    "simulation",
    "pod",
    "graph",
    "svg"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "https://github.com/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/d3-force-pod/issues"
  },
  "homepage": "https://github.com/vasturiano/d3-force-pod",
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "dev": "rollup -w -c",
    "prepare": "npm run build"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "d3-array": "1 - 3",
    "d3-force": "2 - 3",
    "d3-force-limit": "^1.2",
    "d3-selection": "2 - 3",
    "kapsule": "^1.16"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "rimraf": "^6.0.1",
    "rollup": "^4.28.0"
  },
  "engines": {
    "node": ">=12"
  }
}
