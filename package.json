{
  "name": "d3-force-pod",
  "version": "0.4.0",
  "description": "Component to automatically draw nodes/links in a D3 force simulation according to a set of forces",
  "main": "dist/d3-force-pod.js",
  "module": "src/index",
  "jsnext:main": "src/index",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/d3-force-pod.git"
  },
  "keywords": [
    "d3",
    "d3-module",
    "force",
    "simulation",
    "pod",
    "graph",
    "svg"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "https://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/d3-force-pod/issues"
  },
  "homepage": "https://github.com/vasturiano/d3-force-pod",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c --banner \"$(preamble)\" -f umd -n d3ForcePod -o dist/d3-force-pod.js -- src/index.js",
    "watch": "rollup -c -w -f umd -n d3ForcePod -o dist/d3-force-pod.js -- src/index.js",
    "minify": "uglifyjs dist/d3-force-pod.js -o dist/d3-force-pod.min.js -c -m --preamble \"$(preamble)\"",
    "prepublish": "npm run build && npm run minify"
  },
  "dependencies": {
    "d3": "^4.10.2",
    "kapsule": "^1.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "package-preamble": "~0.0.2",
    "rollup": "~0.41.6",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-node-resolve": "^3.0",
    "rollup-watch": "^3.2",
    "uglify-js": "^3.0.28"
  }
}
